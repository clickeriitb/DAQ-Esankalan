<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp" >

        <EditText
            android:id="@+id/sensor_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded"
            android:ems="15"
            android:hint="Sensor Name"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="#FFFCCA"
            android:textColorHint="#FFFCCA" />

        <EditText
            android:id="@+id/quantity_name1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded"
            android:ems="15"
            android:hint="Quantity"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="#FFFCCA"
            android:textColorHint="#FFFCCA" />

        <EditText
            android:id="@+id/s_unit1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded"
            android:ems="15"
            android:hint="Unit"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="#FFFCCA"
            android:textColorHint="#FFFCCA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/baud_rate"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded"
                android:ems="10"
                android:hint="Baudrate"
                android:inputType="numberDecimal"
                android:paddingLeft="10dp"
                android:textColor="#FFFCCA"
                android:textColorHint="#FFFCCA" />

            <EditText
                android:id="@+id/command"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:background="@drawable/rounded"
                android:ems="10"
                android:hint="Command"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="#FFFCCA"
                android:textColorHint="#FFFCCA" />
        </LinearLayout>

        <EditText
            android:id="@+id/byte_string"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded"
            android:ems="15"
            android:hint="Output Length(in bytes)"
            android:inputType="number"
            android:paddingLeft="10dp"
            android:textColor="#FFFCCA"
            android:textColorHint="#FFFCCA" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal" >

            <com.idl.daq.FButton
                android:id="@+id/pin_uart"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="Select Pin"
                android:textColor="@android:color/white"
                fbutton:buttonColor="@color/fbutton_color_turquoise"
                fbutton:shadowEnabled="false" />

            <TextView
                android:id="@+id/pin1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_text_view"
                android:gravity="center_vertical"
                android:hint=" RX Pin "
                android:textColor="#FFFCCA"
                android:textColorHint="#FFFCCA"
                android:textSize="17sp" >
            </TextView>

            <TextView
                android:id="@+id/pin2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_text_view"
                android:gravity="center_vertical"
                android:hint=" TX Pin "
                android:textColor="#FFFCCA"
                android:textColorHint="#FFFCCA"
                android:textSize="17sp" >
            </TextView>

            <TextView
                android:id="@+id/sub_protocol"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_text_view"
                android:gravity="center_vertical"
                android:hint=" Sub Protocol "
                android:textColor="#FFFCCA"
                android:textColorHint="#FFFCCA"
                android:textSize="17sp" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>