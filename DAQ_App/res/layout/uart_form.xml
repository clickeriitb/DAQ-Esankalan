<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        
        android:paddingTop="20dp" >
    <EditText 
        android:id="@+id/sensor_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:hint="Sensor Name"
        android:paddingLeft="10dp"
        android:ems="15"
        android:layout_marginLeft="10dp"
        android:inputType="text"
        android:textColorHint="#FFFCCA"
        android:textColor="#FFFCCA"
        android:background="@drawable/rounded"
        />
    <EditText
        android:id="@+id/quantity_name1" 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="text"
        android:ems="15"
        android:layout_marginLeft="10dp"
        android:hint="Quantity"
        android:paddingLeft="10dp"
        android:textColor="#FFFCCA"
        android:textColorHint="#FFFCCA"
        android:background="@drawable/rounded"
        android:layout_marginTop="20dp"
        />
    
    <EditText 
        android:id="@+id/s_unit1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:inputType="text"
        android:hint="Unit"
        android:paddingLeft="10dp"
        android:ems="15"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFCCA"
        android:textColorHint="#FFFCCA"
        android:background="@drawable/rounded"
        android:layout_marginTop="20dp"
        />
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height ="wrap_content">
    <EditText 
        android:id="@+id/baud_rate"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:hint="Baudrate"
        android:paddingLeft="10dp"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFCCA"
        android:textColorHint="#FFFCCA"
        android:background="@drawable/rounded"
        android:layout_marginTop="20dp"
        />
    <EditText 
        android:id="@+id/command"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:inputType="number"
        android:hint="Command"
        android:paddingLeft="10dp"
        android:ems="10"
        android:layout_marginLeft="20dp"
        android:textColor="#FFFCCA"
        android:textColorHint="#FFFCCA"
        android:background="@drawable/rounded"
        android:layout_marginTop="20dp"
        />
    
    </LinearLayout> 
    
    <EditText 
        android:id="@+id/byte_string"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:hint="Output Length(in bytes)"
        android:paddingLeft="10dp"
        android:ems="15"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFCCA"
        android:textColorHint="#FFFCCA"
        android:background="@drawable/rounded"
        android:layout_marginTop="20dp"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        >
        
         <com.idl.daq.FButton
            android:id="@+id/pin_uart"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            fbutton:shadowEnabled="false"
            fbutton:buttonColor="@color/fbutton_color_turquoise"
            android:text="Select Pin"
            />

        <TextView
            android:id="@+id/pin1"
            android:layout_width="wrap_content"
            android:background="@drawable/rounded"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:textSize="17dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:hint=" RX Pin "
            android:inputType="text"
            android:textColor="#FFFCCA"
            android:textColorHint="#FFFCCA" >

        </TextView>
        
        <TextView
            android:id="@+id/pin2"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/rounded"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="17dp"
            android:layout_marginLeft="10dp" 
            android:hint=" TX Pin "
            android:inputType="text"
            android:textColor="#FFFCCA"
            android:textColorHint="#FFFCCA" >

        </TextView>
        
        <TextView
            android:id="@+id/sub_protocol"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
			android:layout_height="30dp"
			android:layout_weight="1"
            android:background="@drawable/rounded"
			android:textSize="17dp"          
            android:layout_marginLeft="10dp"
            android:hint=" Sub Protocol "
            android:inputType="text"
            android:textColor="#FFFCCA"
            android:textColorHint="#FFFCCA" >

        </TextView>

        

    </LinearLayout>
   
    </LinearLayout>

</ScrollView>