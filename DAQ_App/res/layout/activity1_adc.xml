<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GraphActivity"
    tools:ignore="HardcodedText" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/sensor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:hint="Sensor Name"
            >
            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/pin_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:hint="Pin no."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <TextView
            android:id="@+id/ic_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IC Range" 
            android:layout_marginLeft="10dp"/>
            
            <EditText
            android:id="@+id/ic_range1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="number" 
            android:hint="r1"
            android:layout_marginLeft="10dp"
            android:nextFocusDown="@+id/ic_range2"
             />           
            <EditText
            android:id="@id/ic_range2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="number" 
            android:hint="r2"
            android:layout_marginLeft="10dp"
        	android:nextFocusDown="@+id/formula"
           />
            
        </LinearLayout>

        <TextView
            android:id="@id/formula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" 
            android:hint="Final Formula"
            android:nextFocusDown="@+id/input_range1"
            />

        <Button
            android:id="@+id/formula_adc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Formula" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/input_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Input Range" />

            <EditText
                android:id="@id/input_range1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="2"
                android:hint="r1"
                android:inputType="number"
                android:nextFocusDown="@+id/input_range2" />

            <EditText
                android:id="@id/input_range2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="2"
                android:hint="r2"
                android:inputType="number" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The input range must be between 0 - 1.8V" />

        <Button
            android:id="@+id/submit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="Submit"
            android:layout_gravity="center_horizontal" />
        
    </LinearLayout>
    
    </LinearLayout>