<?xml version="1.0" encoding="UTF-8"?>

<ScrollView
   android:background="@drawable/back2"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
android:layout_width="match_parent"
android:scrollbars="vertical">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:baselineAligned="true"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
     >

    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
    android:orientation="horizontal"
    >
    
    <TextView
        android:id="@+id/sensor1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Sensor Name  :"
        android:textColor="#000000" />
    

        <EditText
	     android:id="@+id/sensor_name"
	     android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="2"
	     android:inputType="text"
	     android:ems="10"
         android:hint="Sensor Name"
          android:textColor="#000000" >
            <requestFocus />
        </EditText>
</LinearLayout>

    
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:layout_marginTop="10dp" >
        
   <TextView
       android:id="@+id/quantity1"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:text="Quantity          :"
       android:textColor="#000000" />

<EditText
        android:id="@+id/quantity_name1"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textColor="#000000"
        android:ems="10" >
    </EditText>
   
</LinearLayout>  
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:layout_marginTop="10dp"
   >

    <TextView
      
        android:id="@+id/unit1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Unit                  :"
       
       />
<EditText
        android:id="@+id/s_unit1"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
         android:textColor="#000000"
         android:inputType="text"
        
        android:ems="10" >

        
    </EditText>
   
</LinearLayout>
  
   
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
   >
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >
            
            
           <TextView
        android:id="@+id/pin"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Pin no.             :"  />
            <EditText
            android:id="@+id/pin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Rx"
            android:layout_marginLeft="10dp"
            android:nextFocusDown="@+id/pin2"
             />           
            <EditText
            android:id="@id/pin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Tx"
            android:layout_marginLeft="10dp"
            android:nextFocusDown="@+id/formula"/>

            <Button
                android:id="@+id/pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pin" />
            
        </LinearLayout>
   
      
   
</LinearLayout>
       
        
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    >
   <TextView
        android:id="@+id/baud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_weight="1"        
        android:text="Baud Rate      :"
       />

   <EditText
       android:id="@+id/baud_rate"    
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="2"
       android:ems="10"
       android:inputType="numberDecimal"
       android:textColor="#000000" >

        
    </EditText>
    </LinearLayout>
    
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    >
   <TextView
        android:id="@+id/cmd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
         android:layout_weight="1"        
        android:text="Command      :"
       />

   <EditText
       android:id="@+id/command"    
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="2"
       android:ems="10"
       android:inputType="number"
       android:textColor="#000000" >
        
    </EditText>
    </LinearLayout>
    
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    >
   <TextView
        android:id="@+id/byte_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
         android:layout_weight="1"        
        android:text="Bytes      :"
       />

   <EditText
       android:id="@+id/byte_string"    
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:layout_weight="2"
       android:ems="10"
       android:inputType="number"
       android:textColor="#000000" 
       >
        
    </EditText>
    </LinearLayout>
   
   <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
     >
    
    <Button
        android:id="@+id/formula_uart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Formula" />
    

     <TextView
         android:id="@+id/formula"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:text=""
         android:textColor="#000000" />

</LinearLayout>

  

      <Button
    android:layout_gravity="center"
    android:id="@+id/submit_uart"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:gravity="center_vertical"
    android:text="Done!" />
        
    </LinearLayout>
    
    </ScrollView>